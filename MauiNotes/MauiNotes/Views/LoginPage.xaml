<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiNotes.Views.LoginPage"
             Title="Notes Login">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>
    <Shell.NavBarIsVisible>true</Shell.NavBarIsVisible>
    <Grid ColumnDefinitions="100, *" RowDefinitions="100, 45, 50, 45, *, 50, 100">
        <Label Text="User Id:" Grid.Column="0" Grid.Row="1" Margin="5, 0, 5, 0" />
        <Entry Grid.Column="1" Grid.Row="1" Margin="5, 0, 5, 0" Text="{Binding UserName}" />
        <Label Text="Password:" Grid.Column="0" Grid.Row="3" Margin="5, 0, 5, 0" />
        <Entry Grid.Column="1" Grid.Row="3" Margin="5, 0, 5, 0"  Text="{Binding Password}" IsPassword="True" />
        <Button Text="Login" Grid.ColumnSpan="2" Grid.Row="5" Margin="5, 0, 5, 0" Command="{Binding Login}" />
    </Grid>
</ContentPage>
